<!-- views/preguntas.erb -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pregunta</title>
</head>
<body>
    <h1>Pregunta:</h1>
    <p><%= @question.description %></p>
    
    <h2>Opciones:</h2>
    <ul>
        <% @question.options.split(',').each do |option| %>
            <li><%= option.strip %></li>
        <% end %>
    </ul>

    <form id="respuesta-form" action="/preguntas/responder" method="post">
        <input type="hidden" name="pregunta_id" value="<%= @question.id %>">
        <label for="respuesta">Tu respuesta:</label>
        <input type="text" id="respuesta" name="respuesta">
        <button type="submit">Responder</button>
    </form>

    <% if session[:mostrar_mensaje] %>
        <div id="mensaje">
            <% if @resultado %>
                <p><%= @resultado %></p>
            <% end %>
        </div>
        <script>
            // Ocultar el mensaje despu√©s de 5 segundos
            setTimeout(function() {
                var mensajeDiv = document.getElementById('mensaje');
                mensajeDiv.style.display = 'none';
            }, 5000);
        </script>
    <% end %>

    <% session[:mostrar_mensaje] = false %>
</body>
</html>
